        "robmorgan/phinx": "^0.10.0",
        "robthree/twofactorauth": "^1.5",
        "fzaninotto/faker": "^1.6.0",
        "lcobucci/jwt": "^3.2.5",
        "diablomedia/zendframework1": "^4.0",

        "ext-dom": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-simplexml": "*",
        "ext-soap": "*",
        "ext-xml": "*",
        "ext-zip": "*",
        "zircote/swagger-php": "^3.0",
