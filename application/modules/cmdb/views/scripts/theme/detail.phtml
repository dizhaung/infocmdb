<script type="text/javascript">
    function delete_theme(id) {
        if (confirm('<?php echo $this->translate('themeDeleteCheck') ?>')) {
            window.location.href = '<?php echo APPLICATION_URL?>theme/delete/themeId/' + id + '/';
        }
    }

    function activate_theme(id) {
        if (confirm('<?php echo $this->translate('themeActivateCheck') ?>')) {
            window.location.href = '<?php echo APPLICATION_URL?>theme/activate/themeId/' + id + '/';
        }
    }
</script>

<div class="button_row">
    <a class="link button" href='<?php echo APPLICATION_URL ?>theme/edit/themeId/<?php echo $this->theme[Db_Theme::ID] ?>'><?php echo $this->translate('edit'); ?></a>
    <?php if ($this->theme[Db_Theme::IS_ACTIVE]): ?>
        <a class="link button cancel" href="javascript:delete_theme(<?php echo $this->theme[Db_Theme::ID] ?>)"><?php echo $this->translate('delete'); ?></a>
    <?php else: ?>
        <a class="link button activate" href="javascript:activate_theme(<?php echo $this->theme[Db_Theme::ID] ?>)"><?php echo $this->translate('activate'); ?></a>
    <?php endif; ?>
    <a class="link button" href="<?php echo APPLICATION_URL ?>theme/index"><?php echo $this->translate('overview'); ?></a>
</div>

<h1 class="pageName"><?php echo $this->translate('themeDetail'); ?></h1>

